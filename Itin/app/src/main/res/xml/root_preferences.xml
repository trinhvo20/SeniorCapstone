<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/display_header">

        <SwitchPreferenceCompat
            app:key="@string/dark_mode_key"
            app:title="@string/dark_mode_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notification_header">

        <SwitchPreferenceCompat
            app:key="@string/friend_request_key"
            app:title="@string/friend_request_title"
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="@string/trip_remind_key"
            app:title="@string/trip_remind_title"
            app:defaultValue="true"/>

    </PreferenceCategory>

</PreferenceScreen>